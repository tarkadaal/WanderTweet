<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/main">
	<Button
		android:id="@+id/twitter_button"
		android:layout_height="wrap_content"
		android:text="@string/twitter_button_text"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="True" />
	<Button
		android:id="@+id/speak_button"
		android:layout_height="wrap_content"
		android:text="@string/speak_button_text"
		android:layout_width="fill_parent"
		android:layout_above="@id/twitter_button" />
	<Button
		android:id="@+id/toggle_service_button"
		android:layout_height="wrap_content"
		android:text="@string/toggle_service_button_text"
		android:layout_width="fill_parent"
		android:layout_above="@id/speak_button" />
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@id/toggle_service_button">
		<TextView
			android:id="@+id/textView1"
			android:text="@string/hello"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
	</ScrollView>
</RelativeLayout>
